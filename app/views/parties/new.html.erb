<h1>New Party</h1>

<%= form_with model: @party do |form| %>
  <div>
    <%= form.label :party_name %><br>
    <%= form.text_field :party_name %>
    <div>
        <% @party.errors.full_messages_for(:party_name).each do |message| %>
      <div><%= message %></div>
      <% end %>
     </div>
  </div>

<div>
  <%= form.label :date_time %><br>
  <%= form.text_field :date_time %>
  <div>
    <% @party.errors.full_messages_for(:date_time).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
</div>

  <div>
    <%= form.label :notes %><br>
    <%= form.text_area :notes %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<div>
<%=link_to "Back",root_path%>
</div>